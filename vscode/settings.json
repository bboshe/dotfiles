{
    "telemetry.telemetryLevel": "off",
    "notebook.output.textLineLimit": 50,
    "editor.minimap.enabled": false,
    "jupyter.askForKernelRestart": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,

    "vim.normalModeKeyBindingsNonRecursive":[
        {
            "before": ["2"],
            "commands": ["workbench.action.focusPreviousGroup"]
        }, 
        {
            "before": ["3"],
            "commands": ["workbench.action.focusNextGroup"]
        }, 
        {
            "before": ["8"],
            "commands": ["workbench.action.previousEditor"]
        }, 
        {
            "before": ["9"],
            "commands": ["workbench.action.nextEditor"]
        }, 
        { "before": ["1"], "after" : [] }, 
        { "before": ["4"], "after" : [] }, 
        { "before": ["5"], "after" : [] },
        { "before": ["6"], "after" : [] },
        { "before": ["7"], "after" : [] },

//        {
//            "before": ["1"],
//            "commands": ["workbench.action.focusFirstEditorGroup"]
//        }, 
//        {
//            "before": ["2"],
//            "commands": ["workbench.action.focusSecondEditorGroup"]
//        }, 
//        {
//            "before": ["3"],
//            "commands": ["workbench.action.focusThirdEditorGroup"]
//        }, 
//        {
//            "before": ["4"],
//            "commands": ["workbench.action.focusFourthEditorGroup"]
//        }, 
    ],
    "editor.fontSize": 13, 
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
    },
    "vim.foldfix": true,
    "autoDocstring.docstringFormat": "numpy",
    "markdown.preview.fontSize": 13,
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "hediet.vscode-drawio.resizeImages": null,
    "jupyter.interactiveWindow.creationMode": "perFile",
    "editor.lineNumbers": "on",
    "editor.peekWidgetDefaultFocus": "editor",
    "workbench.colorTheme": "Default Dark+",
    "gitlens.views.branches.branches.layout": "list"
}
